<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imHinhNhanVien"
        android:layout_width="@dimen/size80dp"
        android:layout_height="@dimen/size50dp"
        android:layout_margin="@dimen/size10dp"
        android:src="@drawable/nhanvien" />

    <TextView
        android:id="@+id/txtTenNhanVien"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size10dp"
        android:layout_toRightOf="@+id/imHinhNhanVien"
        android:text="Tên nhân viên"
        android:textSize="@dimen/size18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtCMND"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtTenNhanVien"
        android:layout_marginTop="@dimen/size10dp"
        android:layout_toRightOf="@+id/imHinhNhanVien"
        android:text="09407409875"
        android:textStyle="bold" />

</RelativeLayout>