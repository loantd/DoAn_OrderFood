<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6E6FA"

    >

    <ImageView
        android:id="@+id/imHienThiHinhMonAn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/size10dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:src="@drawable/themthucdon" />
    />

    <TextView
        android:id="@+id/txtTenMonAn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imHienThiHinhMonAn"
        android:layout_marginTop="15dp"
        android:padding="@dimen/size10dp"
        android:textSize="@dimen/size10dp"
        android:textColor="@color/colorWhite"
        android:background="#ff9999FF"
        android:textAppearance="?android:attr/textAppearanceLarge"

        />
    <TextView
        android:id="@+id/txtGiaTien"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imHienThiHinhMonAn"
        android:padding="@dimen/size5dp"
        android:layout_marginTop="@dimen/size5dp"
        android:text="Large Text"
        android:textSize="@dimen/size18sp"
        android:textColor="@color/colorBlack"
        android:background="#F7BE45"
        android:textAppearance="?android:attr/textAppearanceLarge" />


</RelativeLayout>